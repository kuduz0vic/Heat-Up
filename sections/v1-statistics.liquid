<div class="page-padding-2">
  <div class="container_v2">
    <div class="w-layout-grid statistics-component">
      <div id="w-node-_45c60ae5-807b-4817-dd70-25981868b646-1868b642" class="statistics-content">
        <div class="left-aligned-header key-features">
          <h1 class="h1-section">{{ section.settings.titel | newline_to_br }}</h1>
          {%- if section.settings.subtitel_weergeven -%}
            <p>{{ section.settings.tagline | newline_to_br }}</p>
          {%- endif -%}
        </div>
        <div class="w-layout-grid statistic-list">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'counter' %}
              <div class="statistics-list-item">
                <div class="statistics-h2">
                  <span class="counterup">{{ block.settings.counter-number }}</span>
                  <span>{{ block.settings.counter-sign }}</span>
                </div>
                <div>{{ block.settings.counter-text }}</div>
              </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
      {%- if section.settings.main_image == nil -%}
        <div id="w-node-_45c60ae5-807b-4817-dd70-25981868b661-1868b642" class="images-wrapper-statistics"><img
            src="{{ 'screenshot-2022-06-30-at-23.47-2.png' | asset_url }}"
            loading="lazy"
            alt=""
            class="statistics-img-1"><img
            src="{{ 'rectangle-499.png' | asset_url }}"
            loading="lazy"
            alt=""
            class="statistics-img-2"><img
            src="{{ 'rectangle-499-1.png' | asset_url }}"
            loading="lazy"
            alt=""
            class="statistics-img-3"><img
            src="{{ 'group-2968.png' | asset_url }}"
            loading="lazy"
            sizes="(max-width: 479px) 100vw, (max-width: 767px) 92vw, 100vw"
            srcset="{{ 'group-2968-p-500.png' | asset_url }} 500w, {{ 'group-2968-p-800.png' | asset_url }} 800w, {{ 'group-2968.png' | asset_url }} 1074w"
            alt=""
            class="statistics-mobile"></div>
      {%- else -%}
        <div
          id="w-node-_45c60ae5-807b-4817-dd70-25981868b661-1868b642"
          class="images-wrapper-statistics"
          style="background-image: url('{{ section.settings.main_image.src | img_url: 'master' }}');"><img
            src="{{ 'screenshot-2022-06-30-at-23.47-2.png' | asset_url }}"
            loading="lazy"
            alt=""
            class="statistics-img-1"><img
            src="{{ 'rectangle-499.png' | asset_url }}"
            loading="lazy"
            alt=""
            class="statistics-img-2"><img
            src="{{ 'rectangle-499-1.png' | asset_url }}"
            loading="lazy"
            alt=""
            class="statistics-img-3"><img
            src="{{ 'group-2968.png' | asset_url }}"
            loading="lazy"
            sizes="(max-width: 479px) 100vw, (max-width: 767px) 92vw, 100vw"
            srcset="{{ 'group-2968-p-500.png' | asset_url }} 500w, {{ 'group-2968-p-800.png' | asset_url }} 800w, {{ 'group-2968.png' | asset_url }} 1074w"
            alt=""
            class="statistics-mobile"></div>
      {%- endif -%}
    </div>
  </div>
</div>


<script>
  var currentSection = document.currentScript.closest('.shopify-section');
  currentSection.setAttribute("class", "statistics-section");
</script>


{% schema %}
  {
    "presets": [
      {
        "name": "V1 - Statistics"
      }
    ],
    "name": "V1 - Statistics",
    "tag": "section",
    "class": "statistics-section",
    "settings": [
      {
        "type": "textarea",
        "id": "titel",
        "label": "Titel",
        "default": "Highlight key features of the product or service"
      }, {
        "type": "textarea",
        "id": "tagline",
        "label": "Tagline",
        "default": "Emphasise time-saving and use numbers to maximise credibility."
      }, {
        "type": "image_picker",
        "id": "main_image",
        "label": "Main Image"
      }, {
        "type": "checkbox",
        "id": "subtitel_weergeven",
        "label": "Subtitel weergeven",
        "default": true
      }
    ],
    "blocks": [
      {
        "name": "Counter",
        "type": "counter",
        "settings": [
          {
            "type": "text",
            "id": "counter-number",
            "label": "Counter Number"
          }, {
            "type": "text",
            "id": "counter-sign",
            "label": "Counter Sign"
          }, {
            "type": "text",
            "id": "counter-text",
            "label": "Counter Text"
          }
        ]
      }
    ]
  }
{% endschema %}